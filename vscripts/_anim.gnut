void function GlobalAnimEvent_RecordOrigin( entity actor )
{
	if ( !actor.IsPlayer() )
		return
	if ( !( "recordedOrigin" in actor.s ) )
		actor.s.recordedOrigin <- []

	table record = {}
	record.origin <- actor.GetOrigin()
	record.time <- Time()

	actor.s.recordedOrigin.append( record )
}

