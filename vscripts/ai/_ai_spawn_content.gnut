var function GetTitanHotdropSetting( entity npc )
{
	if ( npc.mySpawnOptions_titanfallSpawn != null )
		return "titanfall"
	if ( npc.mySpawnOptions_warpfallSpawn != null )
		return "warpfall"

	if ( npc.HasKey( "script_hotdrop" ) )
	{
		switch ( npc.kv.script_hotdrop )
		{
			case "0":
				return null
			case "3":
			case "1":
				return "titanfall"
			case "4":
			case "2":
				return "warpfall"
		}
	}

	return null
}

