void function SpectreBatteryThink( entity npc, entity battery )
{
	battery.EndSignal( "OnDestroy" )
	npc.EndSignal( "OnDestroy" )

	OnThreadEnd(
	function() : ( battery )
		{
			if ( IsValid( battery ) )
			{
				battery.ClearParent()
				battery.SetAngles( < 0,0,0 > )
				battery.SetVelocity( < 0,0,200 > )
			}
		}
	)

	npc.WaitSignal( "OnDeath" )
}