void function PassiveVoices_OnPassiveChanged( entity player, int passive, bool didHave, bool nowHas )
{
	if ( didHave )
	{
		#if DEVELOPER
		printt("[Passive Voices - Reimplemented by @CafeFPS] - stopped for player ", player)
