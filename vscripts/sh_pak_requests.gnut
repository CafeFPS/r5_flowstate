void function ShPakRequests_LevelInit()
{
	#if CLIENT
		RegisterSignal( "PakFileLoaded" )
		RegisterSignal( "PakHandleReleased" )

		RegisterSignal( "WORKAROUND_ProcessPakQueues" )
		thread WORKAROUND_ProcessPakQueues()
	#endif
}



