#if CLIENT
enum ePakRequestStatus
{
	INVALID,
	QUEUED_TO_LOAD,
	LOAD_REQUESTED,
	LOAD_REQUESTED_BUT_WILL_UNLOAD_IMMEDIATELY,
	LOADED,
	QUEUED_TO_UNLOAD,
	UNLOADED,
	ERROR,
}
#endif

#if CLIENT
struct PakRequestState
{
	string                 rpakPath
	table<PakHandle, bool> handleSet
	int                    status = ePakRequestStatus.INVALID
	int                    pakId

	float WORKAROUND_unloadQueueTime = -1.0
}
#endif



